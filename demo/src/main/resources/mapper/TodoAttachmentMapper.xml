<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.mapper.TodoAttachmentMapper">
    <resultMap id="AttachmentMap" type="com.example.todo.entity.TodoAttachment">
        <id column="id" property="id"/>
        <result column="todo_id" property="todoId"/>
        <result column="original_name" property="originalName"/>
        <result column="stored_name" property="storedName"/>
        <result column="content_type" property="contentType"/>
        <result column="size" property="size"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todo_attachments
        (todo_id, original_name, stored_name, content_type, size, created_at)
        VALUES
        (#{todoId}, #{originalName}, #{storedName}, #{contentType}, #{size}, CURRENT_TIMESTAMP)
    </insert>

    <select id="findByTodoId" resultMap="AttachmentMap">
        SELECT * FROM todo_attachments
        WHERE todo_id = #{todoId}
        ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="AttachmentMap">
        SELECT * FROM todo_attachments
        WHERE id = #{id}
    </select>

    <select id="findByIdAndTodoId" resultMap="AttachmentMap">
        SELECT * FROM todo_attachments
        WHERE id = #{id} AND todo_id = #{todoId}
    </select>

    <delete id="deleteById">
        DELETE FROM todo_attachments WHERE id = #{id}
    </delete>
</mapper>
