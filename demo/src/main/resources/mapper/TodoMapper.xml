<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.mapper.TodoMapper">
    <resultMap id="TodoMap" type="com.example.todo.entity.Todo">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="author" property="author"/>
        <result column="due_date" property="dueDate"/>
        <result column="priority" property="priority"/>
        <result column="completed" property="completed"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="version" property="version"/>
        <association property="category" javaType="com.example.todo.entity.Category">
            <id column="category_id" property="id"/>
            <result column="category_name" property="name"/>
            <result column="category_color" property="color"/>
        </association>
        <association property="user" javaType="com.example.todo.entity.User">
            <id column="user_id" property="id"/>
            <result column="username" property="username"/>
            <result column="role" property="role"/>
        </association>
    </resultMap>

    <sql id="BaseSelect">
        SELECT t.*, c.name AS category_name, c.color AS category_color,
               u.username, u.role
        FROM todos t
        INNER JOIN users u ON t.user_id = u.id
        LEFT JOIN categories c ON t.category_id = c.id
    </sql>

    <select id="findByUserWithFilters" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE t.user_id = #{userId}
        <if test="keyword != null and keyword != ''">
            AND t.title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        <if test="categoryId != null">
            AND t.category_id = #{categoryId}
        </if>
        ORDER BY
        <choose>
            <when test="sort == 'title'">t.title</when>
            <when test="sort == 'completed'">t.completed</when>
            <when test="sort == 'priority'">t.priority</when>
            <when test="sort == 'dueDate'">t.due_date</when>
            <otherwise>t.created_at</otherwise>
        </choose>
        <choose>
            <when test="dir == 'asc'">ASC</when>
            <otherwise>DESC</otherwise>
        </choose>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="findByUserWithFiltersNoPaging" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE t.user_id = #{userId}
        <if test="keyword != null and keyword != ''">
            AND t.title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        <if test="categoryId != null">
            AND t.category_id = #{categoryId}
        </if>
        ORDER BY
        <choose>
            <when test="sort == 'title'">t.title</when>
            <when test="sort == 'completed'">t.completed</when>
            <when test="sort == 'priority'">t.priority</when>
            <when test="sort == 'dueDate'">t.due_date</when>
            <otherwise>t.created_at</otherwise>
        </choose>
        <choose>
            <when test="dir == 'asc'">ASC</when>
            <otherwise>DESC</otherwise>
        </choose>
    </select>

    <select id="countByUserWithFilters" resultType="long">
        SELECT COUNT(*)
        FROM todos t
        WHERE t.user_id = #{userId}
        <if test="keyword != null and keyword != ''">
            AND t.title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        <if test="categoryId != null">
            AND t.category_id = #{categoryId}
        </if>
    </select>

    <select id="findByIdAndUser" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE t.id = #{id} AND t.user_id = #{userId}
    </select>

    <select id="findById" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE t.id = #{id}
    </select>

    <select id="findByUserId" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE t.user_id = #{userId}
        ORDER BY t.created_at DESC
    </select>

    <select id="findByUsername" resultMap="TodoMap">
        <include refid="BaseSelect"/>
        WHERE u.username = #{username}
        ORDER BY t.created_at DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todos
        (title, description, author, user_id, category_id, due_date, priority, completed, created_at, updated_at, version)
        VALUES
        (#{title}, #{description}, #{author}, #{userId}, #{categoryId}, #{dueDate}, #{priority}, #{completed},
         CURRENT_TIMESTAMP, CURRENT_TIMESTAMP, #{version})
    </insert>

    <update id="update">
        UPDATE todos
        SET title = #{title},
            description = #{description},
            category_id = #{categoryId},
            due_date = #{dueDate},
            priority = #{priority},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <update id="toggleCompleted">
        UPDATE todos
        SET completed = CASE WHEN completed = TRUE THEN FALSE ELSE TRUE END,
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <delete id="deleteByIdAndUser">
        DELETE FROM todos
        WHERE id = #{id} AND user_id = #{userId}
    </delete>

    <delete id="deleteByIdsAndUser">
        DELETE FROM todos
        WHERE user_id = #{userId}
        AND id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
